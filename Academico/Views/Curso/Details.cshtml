@model Academico.Models.Curso

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CargaHoraria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CargaHoraria)
        </dd>
    </dl>
    <table>
        <tr>
            <th>Curso Id</th>
            <th>Disciplina Id</th>
        </tr>
        @foreach (var item in (List<CursoDisciplina>)ViewData["Disciplinas"])
        {
            <tr>
                <td>
                    @item.CursoId
                </td>
                <td>
                    @item.DisciplinaId
                </td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CursoId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
